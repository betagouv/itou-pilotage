<header class="c-header" role="banner" id="header">
  <section class="c-header__container container">
    <div class="c-header__row row">
      <div class="c-header__col c-header__col--logo col-auto d-flex align-items-center pr-0 pr-md-3">
        <a href="#top" class="c-header__logo-ministere"><img src="<%= typeof pathDepth != 'undefined' ? pathDepth : './..' %>/images/logo-ministere-travail.svg" alt="Ministère du travail"></a>
      </div>
      <div class="c-header__col c-header__col--logo col-auto d-flex align-items-center px-0 px-md-3">
        <span><img src="<%= typeof pathDepth != 'undefined' ? pathDepth : './..' %>/images/logo-pilotage.svg" alt="Pilotage de l'inclusion"></span>
      </div>
      <div class="c-header__col c-header__col--nav col d-none d-xl-inline-flex d-xl-flex align-items-center justify-content-end">
        <nav>
          <ul>
            <li <% if (locals.currentItem === 'accueil' ) { %>class="is-current"<% } %>>
              <a href="./" rel="noopener">
                <span>Accueil</span>
              </a>
            </li>
            <li <% if (locals.currentItem === 'tableaux-de-bord' ) { %>class="is-current"<% } %>>
              <a href="./tableaux-de-bord" rel="noopener">
                <span>Tableaux de bord</span>
              </a>
            </li>
            <li <% if (locals.currentItem === 'experimentation' ) { %>class="is-current"<% } %>>
              <a href="./experimentation" rel="noopener">
                <span>Expérimentation</span>
              </a>
            </li>
          </ul>
        </nav>
      </div>
      <div class="c-header__col c-header__col--burger col d-flex align-items-center justify-content-end d-xl-none" data-toggle="burger">
        <span id="burger"><img src="<%= typeof pathDepth != 'undefined' ? pathDepth : './..' %>/images/picto-burger.svg" alt="Menu" /></span>
        <span id="close"><img src="<%= typeof pathDepth != 'undefined' ? pathDepth : './..' %>/images/picto-close.svg" alt="Fermer" /></span>
      </div>
      <div id="burgerNav">
        <nav>
          <ul>
            <li>
              <a href="./" rel="noopener">
                <span>Accueil</span>
              </a>
            </li>
            <li>
              <a href="./tableaux-de-bord" rel="noopener">
                <span>Tableaux de bord</span>
              </a>
            </li>
            <li>
              <a href="./experimentation" rel="noopener" target="_blank">
                <span>Expérimentation</span>
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </section>
</header>
